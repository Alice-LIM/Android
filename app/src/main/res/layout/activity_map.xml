<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <View
            android:id="@+id/map_title"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <Button
            android:id="@+id/map_navi"
            android:layout_width="16.2dp"
            android:layout_height="12.2dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/hamburger_blue"
            android:backgroundTint="#1d254f"
            app:layout_constraintLeft_toLeftOf="@+id/map_title"
            app:layout_constraintTop_toTopOf="@+id/map_title"
            app:layout_constraintBottom_toBottomOf="@+id/map_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맵"
            android:textSize="14sp"
            android:textColor="#1d254f"
            app:layout_constraintLeft_toLeftOf="@+id/map_title"
            app:layout_constraintTop_toTopOf="@+id/map_title"
            app:layout_constraintRight_toRightOf="@+id/map_title"
            app:layout_constraintBottom_toBottomOf="@+id/map_title"/>

        //맵 프래그넌트
        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_below="@+id/map_title"
            class="com.google.android.gms.maps.MapFragment" />

        <Button
            android:id="@+id/map_go_train"
            android:layout_width="20.8dp"
            android:layout_height="11.5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/dash"
            app:layout_constraintRight_toRightOf="@+id/map_title"
            app:layout_constraintTop_toTopOf="@+id/map_title"
            app:layout_constraintBottom_toBottomOf="@+id/map_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginBottom="145dp"
            android:text="Zone 4"
            android:textSize="30sp"
            android:textColor="#1d254f"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:layout_width="1px"
            android:layout_height="53dp"
            android:layout_marginBottom="130dp"
            android:background="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="97dp"
            android:layout_marginBottom="145dp"
            android:text="104"
            android:textSize="30sp"
            android:textColor="#1d254f"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="145dp"
            android:text="bpm"
            android:textSize="17sp"
            android:textColor="#1d254f"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/t_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/end_button"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="-1.2sp"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:text="운동 시작"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/map_navi_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/nav_background"
        app:itemTextColor="@color/black">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/map_navi_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/close"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="94dp"
                android:background="@drawable/photo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="202dp"
                android:text="patryk.kyungho"
                android:textSize="12.5sp"
                android:textColor="#091037"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="239dp"
                android:background="#809bb3dc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="311dp"
                android:gravity="center"
                android:text="대시보드\n\n라이딩 기록\n\n심박 순위판\n\n프로필"
                android:textSize="18sp"
                android:textColor="#344b8e"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageButton
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="64dp"
                android:src="@drawable/settings"
                android:background="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:layout_marginBottom="42dp"
                android:text="설정"
                android:textColor="#9bb3dc"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageButton
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="64dp"
                android:src="@drawable/log_out"
                android:background="@null"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="37dp"
                android:layout_marginBottom="42dp"
                android:text="로그아웃"
                android:textColor="#9bb3dc"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>